{
  "name": "my-proshop",
  "version": "1.0.0",
  "description": "Shopping cart app",
  "main": "server.ts",
  "scripts": {
    "build:backend": "npm run build:rest && npm run build:graphql",
    "start:rest:js": "node dist/server.js",
    "start:graphql:js": "node dist/backend/graphql/index.js",
    "build:graphql": "tsc",
    "build:rest": "tsup backend",
    "dev:rest": "tsx backend/server.ts",
    "dev:graphql": "ts-node-dev --respawn --transpile-only backend/graphql/index.ts",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run dev:rest\"  \"npm run dev:graphql\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "build:front": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend",
    "prettier-format": "prettier --config .prettierrc '*/**/*.ts' --write",
    "lint": "eslint . --ext .js,.ts",
    "start": "npm run build && npm run build:front && npm run rest:js && npm run graphql && npm run client"
  },
  "author": "Mauricio Natacci",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.258.0",
    "@typegoose/typegoose": "^10.1.1",
    "@types/express-serve-static-core": "^4.17.33",
    "@typescript-eslint/parser": "^5.50.0",
    "apollo-server": "^3.5.0",
    "apollo-server-express": "^2.9.16",
    "apollo-server-testing": "^2.9.16",
    "aws-sdk": "^2.1261.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-graphql": "^0.12.0",
    "graphql": "15.x",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "ts-node-dev": "^1.1.8",
    "uuidv4": "^6.2.13",
    "tsup": "^6.6.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^3.0.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  }
}
